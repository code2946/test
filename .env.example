# ScreenOnFire Environment Variables
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_JWT_SECRET=your_supabase_jwt_secret

# Database URLs (for direct database access if needed)
POSTGRES_URL=your_postgres_connection_string
POSTGRES_PRISMA_URL=your_postgres_pooling_connection_string
POSTGRES_URL_NON_POOLING=your_postgres_direct_connection_string
DATABASE_URL=your_database_url

# TMDB API (The Movie Database)
TMDB_API_KEY=your_tmdb_api_key
TMDB_ACCESS_TOKEN=your_tmdb_bearer_token

# AI Integration (Google Gemini)
GEMINI_API_KEY=your_gemini_api_key

# Vercel Deployment (optional)
VERCEL_URL=your_vercel_domain.vercel.app

# Node Environment
NODE_ENV=development