{
  "name": "screenonfire",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lint": "next lint",
    "start": "next start",
    "db:seed": "node scripts/seed-movies.js",
    "db:sync": "curl -s http://localhost:3000/api/sync-movies | jq",
    "db:sync-force": "curl -s http://localhost:3000/api/sync-movies?force=true | jq",
    "db:sync-prod": "curl -s https://$VERCEL_URL/api/sync-movies | jq",
    "db:schema": "echo 'Run scripts/create-movies-schema.sql in your Supabase SQL Editor'",
    "rec:schema": "echo 'Run scripts/create-recommendation-schema.sql in your Supabase SQL Editor'",
    "rec:ingest": "node scripts/enhanced-movie-ingestion.js enhance",
    "rec:ingest-new": "node scripts/enhanced-movie-ingestion.js new", 
    "rec:vectors": "node scripts/compute-vectors.js 100 10",
    "rec:status": "curl -s http://localhost:3000/api/recommend | jq",
    "postbuild": "echo 'Build completed successfully'",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@ai-sdk/xai": "^2.0.2",
    "@radix-ui/react-avatar": "^1.1.10",
